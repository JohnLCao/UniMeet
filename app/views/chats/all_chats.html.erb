<div class="cntr">

  <div class="user-circle">
    <h1 class="cursive-title-inline"><%= @user.name %></h1>
  </div>

  <h1 class="chat-title">Have a chat with:</h1>

  <table align="center">
    <thead>
      <tr>
        <th>Name</th>
        <th>Age</th>
        <th>Bio</th>
        <th>Bool drink</th>
        <th>Party</th>
        <th>Study</th>
        <th>Commute</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @users.each do |user| %>
        <tr>
          <td><%= user.name %></td>
          <td><%= user.age %></td>
          <td><%= user.bio %></td>
          <td><%= user.bool_drink %></td>
          <td><%= user.party %></td>
          <td><%= user.study %></td>
          <td><%= user.commute %></td>
          <td><%= link_to "Start Chat!", one_chat_path%></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <hr>
  <%= link_to "Home", root_path, {style: 'font-size: 17px;'} %> |
  <%= link_to "Logout", logout_path, {style: 'font-size: 17px;', method: :delete} %>
</div>